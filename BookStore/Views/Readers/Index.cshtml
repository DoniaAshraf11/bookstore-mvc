@model IEnumerable<BookStoreMVC.Models.Reader>

@{
    ViewData["Title"] = "Readers";
}

<h1 class="text-center my-4">👥 Readers</h1>

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-light text-center">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>📚 Books</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reader in Model)
        {
            <tr>
                <td>@reader.Name</td>
                <td>@reader.Email</td>
                <td>@reader.PhoneNumber</td>
                <td>
                    @if (reader.Books != null && reader.Books.Any())
                    {
                        <ul class="mb-0">
                            @foreach (var book in reader.Books)
                            {
                                <li>@book.Title</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">No books</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@reader.Id">Edit</a>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@reader.Id">Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@reader.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-success">➕ Add Reader</a>
</p>
