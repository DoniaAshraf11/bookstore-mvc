@model IEnumerable<BookStoreMVC.Models.Author>

@{
    ViewData["Title"] = "Authors";
}

<h1 class="text-center my-4">✍️ Authors</h1>

<div class="mb-3 text-end">
    <a class="btn btn-success" asp-action="Create">
        ➕ Add New Author
    </a>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-hover table-bordered shadow-sm">
    <thead class="table-dark text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Nationality)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle text-center">
                <td>@item.Name</td>
                <td>@item.Nationality</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">✏️ Edit</a>
                    <a class="btn btn-sm btn-info text-white" asp-action="Details" asp-route-id="@item.Id">ℹ️ Details</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">🗑️ Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
